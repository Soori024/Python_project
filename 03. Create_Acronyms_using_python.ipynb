    "# Generates a short form of a word from a given sentence.\n",
    "t = int(input(\"Test case:\"))\n",
    "\n",
    "while(t>0):\n",
    "    input_data = str(input(\"Enter a Phrase:\"))\n",
    "\n",
    "    data = input_data.split()\n",
    "\n",
    "    a = \" \"\n",
    "\n",
    "    for i in data:\n",
    "        a = a+str(i[0]).upper()\n",
    "\n",
    "    print(a)\n",
    "    t-=1"
